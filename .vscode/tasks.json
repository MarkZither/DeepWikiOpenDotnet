{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "open-scalar-instructions",
            "type": "shell",
            "command": "echo",
            "args": [
                "\nðŸš€ Aspire Dashboard: http://localhost:18888\nðŸ“˜ To access Scalar API docs:\n   1. Open the Aspire Dashboard above\n   2. Find 'apiservice' in the Resources list\n   3. Click the HTTP endpoint link\n   4. Add /scalar/v1 to the URL\n"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false,
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}