{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Aspire: AppHost (Dashboard + All Services)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/deepwiki-open-dotnet.AppHost/bin/Debug/net10.0/deepwiki-open-dotnet.AppHost.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/deepwiki-open-dotnet.AppHost",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s"
            },
            "console": "internalConsole",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Attach to running AppHost",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "Attach to AppHost (show PID first)",
            "type": "coreclr",
            "request": "attach",
            "preLaunchTask": "show-apphost-pid",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "Launch API with Scalar (Standalone)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/deepwiki-open-dotnet.ApiService/bin/Debug/net10.0/deepwiki-open-dotnet.ApiService.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/deepwiki-open-dotnet.ApiService",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/scalar/v1"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5000"
            },
            "console": "internalConsole"
        },
        {
            "name": "Attach to Web (running in Aspire)",
            "type": "coreclr",
            "request": "attach",
            "processName": "deepwiki-open-dotnet.Web"
        },
        {
            "name": "Attach to ApiService (running in Aspire)",
            "type": "coreclr",
            "request": "attach",
            "processName": "deepwiki-open-dotnet.ApiService"
        }
    ]
}