{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      // SignalR logs "Maximum message size exceeded" at Warning level.
      // Keep this at Warning or lower so frame rejections are always visible.
      "Microsoft.AspNetCore.SignalR": "Warning",
      // Blazor Server circuit errors (unhandled exceptions, forced disconnects)
      // are logged here. Warning surfaces abnormal disconnections.
      "Microsoft.AspNetCore.Components.Server": "Warning"
    }
  },
  "AllowedHosts": "*"
}
